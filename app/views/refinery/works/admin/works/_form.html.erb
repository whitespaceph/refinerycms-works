<%= form_for [refinery, :works_admin, @work] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @work,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :work_id -%>
    <%= f.text_field :work_id -%>
  </div>

  <div class='field'>
    <%= f.label :cover_photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :cover_photo_id,
               :image => @work.cover_photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :client_name -%>
    <%= f.text_field :client_name -%>
  </div>

  <div class='field'>
    <%= f.label :work_type -%>
    <%= f.text_field :work_type -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:work_description],
                :object => "works/work" -%>
  </div>

  <div class='field'>
    <%= f.label :work_photo_1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :work_photo_1_id,
               :image => @work.work_photo_1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :work_photo_2 -%>
