               :image => @work.work_photo_6,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :work_photo_7 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :work_photo_7_id,
               :image => @work.work_photo_7,
               :toggle_image_display => false -%>
  </div>

